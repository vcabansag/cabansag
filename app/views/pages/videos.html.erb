<%# content_for :title, "#{@minutes} minutes of Cabansag Family Video" %>
<% content_for :title, "Cabansag.com" %>

<div class='row'>
  <ul class='small-block-grid-1 large-block-grid-2'>
    <% @videos.each do |video| %>

      <li>
        <div class='row'>
          <div class='small-11 small-centered large-11 large-centered columns'>
            <div class="flex-video">
              <iframe src='//player.vimeo.com/video/<%="#{video.url}" %>' width="500" height="375" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            </div>
            <h2><%= video.title %></h2>
            <h6 class='subheader'><%= "#{video.date} &sdot; #{distance_of_time_in_words(video.duration * 60)} &sdot; #{logo_for(video.format)}".html_safe %></h6>
          </div>
        </div>
      </li>

    <% end %>
  </ul>
</div>
